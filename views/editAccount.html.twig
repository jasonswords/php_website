{% extends '_template.html.twig' %}


{% block css %}

    @import "css/product.css";
    @import "css/editForm.css";

{% endblock %}



{% block header %}



{% endblock %}



{% block main %}

    <form action="index.php?action=processAccountUpdate"  method="post" >



                              <h1>Edit Account</h1>


        <label>Id:</label><input type="text" name="id" value="{{ account.id }}" readonly>
        <br>
        <label>First Name:</label><input type="text" name="firstName" value="{{ account.firstName }}">
        <br>
        <label>Second Name:</label><input type="text" name="secondName" value="{{ account.secondName }}">
        <br>
        <label>Country:</label><input type="text" name="country" value="{{ account.country }}">
        <br>
        <label>User Name:</label><input type="text"name="userName" value="{{ account.userName }}">
        <br>
        <label>Password:</label><input type="password"name="password" value="{{ account.password }}">
        <br>

        <label> </label><input type="submit" value="Update" id="submitButton">

    </form>



{% endblock %}