{% extends '_template.html.twig' %}



{% block css %}

    @import "css/addProduct.css";

{% endblock %}



{%  block header %}



{% endblock %}




{% block main %}

    <form action="/index.php" method="post" target="_self"  enctype="multipart/form-data">
        <input type="hidden" name="action" value="processProduct">

        <h2>Error.....Something went wrong, please try again</h2>

        <h1>Create Product</h1>

        <fieldset>

            <label>Product Name</label> <input type="text" name="name" required placeholder="Item name"><br>
            <label>Product Price</label> <input type="text" name="price" required placeholder="Item Price"><br>
            <label>Product Image</label> <input type="file" name="upload" id="upload" required placeholder="Item Image URL"><br>
            <label>Product Description</label> <textarea rows="10" cols="18" name="description" placeholder="Optional"></textarea><br>

        </fieldset>
        <br>
        <div id="button">

            <input type="submit" value="Add" id="submit">
            <input type="reset" value="Clear" id="reset">
            <br>

        </div>
    </form>

{% endblock %}



