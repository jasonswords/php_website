{% extends "_template.html.twig" %}

{% block css %}

    @import "css/form.css";

   #message{
    margin:auto;
    padding-top:1rem;
    color:red;
    }

    #fieldset{
    padding:1rem;
    }



    {% endblock %}



{% block main %}




    <form action="index.php?action=processStaff" method="post">

        <h2 id="message"> Error..... Passwords do not match</h2>
        <h2 id="message">Please try again</h2>

        <h1>Add Staff</h1>

        <fieldset id="fieldset">

            <label for="userName" >First Name:</label><input type="text" name="userName" required size="20" maxlength="20" autofocus placeholder="First Name" id="firstName"><br>
            <label>Password:</label> <input type="password" name="password1" required><br>
            <label>Confirm Password:</label> <input type="password" name="password2" required><br>
            <label>Admin access</label>
            <input type="radio" value="1" name="radioButton">Yes
            <input type="radio" value="0" name="radioButton">No
            <br>

        </fieldset>

        <br>

        <div id="button">

            <input type="submit" value="Send" id="submit">
            <input type="reset" value="Clear" id="reset"><br>

        </div>

    </form>

{% endblock %}